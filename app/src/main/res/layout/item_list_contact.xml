<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="A TuanTA (PMO)\nMobile: 012345678\nPhone : 043 012345" />

    <ImageView
        android:id="@+id/imageViewPhone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_phone_blue_500_48dp" />

    <ImageView
        android:id="@+id/imageViewMessage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewPhone"
        android:layout_margin="10dp"
        android:background="@drawable/ic_message_blue_500_48dp" />

    <ImageView
        android:id="@+id/imageViewEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewMessage"
        android:layout_margin="10dp"
        android:background="@drawable/ic_email_blue_500_36dp" />

    <ImageView
        android:id="@+id/imageViewAddress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewEmail"
        android:layout_margin="10dp"
        android:background="@drawable/ic_place_blue_500_36dp" />

    <ImageView
        android:id="@+id/imageViewSlack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewAddress"
        android:layout_margin="10dp"
        android:background="@drawable/icon_slack" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_grey" />
</RelativeLayout>